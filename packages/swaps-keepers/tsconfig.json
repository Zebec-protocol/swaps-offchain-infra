{
  "ts-node": {
    // these options are overrides used only by ts-node
    // same as the --compilerOptions flag and the TS_NODE_COMPILER_OPTIONS environment variable
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom", "es7", "es2017", "webworker"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,                             /* Emit additional JavaScript to ease support for importing CommonJS modules. This enables `allowSyntheticDefaultImports` for type compatibility. */
    "allowJs": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,            /* Ensure that casing is correct in imports. */
    "strict": true,                                      /* Enable all strict type-checking options. */
    "skipLibCheck": true                                /* Skip type checking all .d.ts files. */,
    "resolveJsonModule": true
  },
  "include": ["index.ts", "src/constants", "src/types", "src/utils", "src/entities/PricePoller.ts", "src/index.ts", "src/entities/index.ts", "run-price-feed-keeper.ts", "run-watcher.ts", "scripts", "watcher-index.ts"],
  "exclude": [
    "src/**/*.test.ts"
  ]
}
